func FindByID(c *ginp.ContextPlus) {
	var params *comdto.ReqFindById
	if err := c.ShouldBindJSON(&params); err != nil {
		c.FailData("请求参数有误" + err.Error())
		return
	}
	info, err := service.Db$ENTITY_NAME$().FindOneById(params.ID)
	if err != nil {
		c.FailData(err.Error())
		return
	}
	c.SuccessData(info)
}

